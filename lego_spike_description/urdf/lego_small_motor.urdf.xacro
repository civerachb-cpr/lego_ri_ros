<?xml version="1.0" ?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">
  <xacro:macro name="lego_small_motor" params="port parent *origin">
    <link name="motor_${port}_link">
      <visual>
        <geometry>
          <mesh filename="package://lego_spike_description/meshes/SpikePrimeSmallMotor.stl" scale="0.0004 0.0004 0.0004"/>
        </geometry>
        <material name="lego_white" />
        <origin xyz="0 0.005 0" rpy="1.5707963267948966 0 1.5707963267948966" />
      </visual>
      <!-- TODO: collision -->
    </link>
    <joint name="motor_${port}_joint" type="fixed">
      <parent link="${parent}" />
      <child link="motor_${port}_link" />
      <xacro:insert_block name="origin" />
    </joint>

    <link name="motor_${port}_wheel_link" />
    <joint name="motor_${port}_wheel_joint" type="continuous">
      <parent link="motor_${port}_link" />
      <child link="motor_${port}_wheel_link" />
      <origin xyz="0.02 0 0.03" rpy="0 0 0" />
      <axis xyz="0 0 1" />
    </joint>
  </xacro:macro>
</robot>
